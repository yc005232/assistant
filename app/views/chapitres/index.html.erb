<% provide(:title, 'All chapitres') %>
<h1>All chapitres</h1>

<%= will_paginate %>

    <ul class="chapitres">
      <h2>
<%= link_to 'New Chapitre', new_chapitre_path %> </h2>
    <% @chapitres.each do |chapitre| %>
      <li>
        <h2><%= chapitre.numero %>.
        <%=link_to  chapitre.titre , chapitre %> </h2>
	Sujet des anecdotes présentes : <% chapitre.anecdotes.each do |anecdote| %>
	<%= anecdote.sujet %> 
	<% end %>
       <br> Instant des scenes présentes: <% chapitre.scenes.each do |scene| %>
	 <%= scene.instant %> </li>
	<% end %>

  <ul>
        <%= link_to 'Edit', edit_chapitre_path(chapitre) %>
        <%= link_to 'Destroy', chapitre, method: :delete, data: { confirm: 'Are you sure?' } %>
      </ul>
  

  <%end%>
</ul>

<%= will_paginate %>
