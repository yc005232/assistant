<h1>Listing scenes</h1>

<table>
  <thead>
    <tr>
      <th>Recit</th>
      <th>Lieu</th>
      <th>Instant</th>
      <th>Chapitre</th>
      <th>Personne</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @scenes.each do |scene| %>
      <tr>
        <td><%= scene.recit %></td>
        <td><%= scene.lieu %></td>
        <td><%= scene.instant %></td>
        <td><%= scene.chapitre_id %></td>
        <td><%= scene.personnes.to_s %></td>
        <td><%= link_to 'Show', scene %></td>
        <td><%= link_to 'Edit', edit_scene_path(scene) %></td>
        <td><%= link_to 'Destroy', scene, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

